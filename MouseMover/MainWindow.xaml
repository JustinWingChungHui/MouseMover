<Window x:Class="MouseMover.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NoSleepMouse"
        mc:Ignorable="d"
        Title="Mouse Mover" SizeToContent="WidthAndHeight" ResizeMode="CanResizeWithGrip" FontSize="8" WindowStyle="ToolWindow">
    <Grid>
        <CheckBox Content="Enable Mouse Mover" Margin="10,10,10,10" Checked="CheckBox_Checked" Unchecked="CheckBox_Unchecked" Grid.ColumnSpan="2" FontSize="12"/>
    </Grid>
</Window>
